// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Like {
  id     Int @id @default(autoincrement())
  userId Int
  postId Int

  @@map(name: "like")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  password String

  salt String @default(uuid()) @db.Uuid

  @@map(name: "user")
}
